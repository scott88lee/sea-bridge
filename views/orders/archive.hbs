{{#each orders}}
<div class="ui accordion">
   <div class="title">
      <table class="ui fluid celled table">
         <thead>
            <tr>
               <th class="collapsing">
                  <i class="dropdown icon"></i>
               </th>
               <th class="left collapsing"><a
                     href="https://lenskart-sing.myshopify.com/admin/orders/{{this.shopify_order_id}}" target=”_blank”>
                     #{{this.shopify_order_number}}
                  </a>
               </th>
               <th class="left collapsing">{{this.raw_data.customer.first_name}} {{this.raw_data.customer.last_name}}</th>
               <th class="right aligned">URL: </th>
               <th class="right aligned"><input class="ui input" id="{{this.shopify_order_id}}" style='width:100%'></th>
               <th class="right aligned collapsing"><button onclick="sendWebhook({{this.shopify_order_id}})" class="ui button">Send Webhook</button>
               </th>
            </tr>
         </thead>
      </table>
   </div>
   <div class="content">
      <table class="ui celled table" id="bill">
         <thead>
            <tr>
               <th class="collapsing">Data</th>
            </tr>
         </thead>
         <tbody>
            <tr>
               <th class="collapsing">
               <textarea name="" id="" cols="30" rows="10" style='width:100%'>
                  {{this.data}}
               </textarea>
               </th>
            </tr>
         </tbody>
      </table>

   </div>
</div>
{{/each}}

<script>
      function sendWebhook(orderId) {
      const url = '/orders/post/webhook'
      const target = document.getElementById(orderId).value
   
      if (target.length > 0) {
         (async () => {
            const response = await fetch(url, {
              method: 'POST',
              headers: {
                'Accept': 'application/json',
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({id: orderId, target: target})
            });
            const content = await response.json();
          
            console.log(content);
            if (response.status == 200) {
               alert("Success")
            } else {
               alert("Failed")
            }
         })();
   
      } else {
         alert("URL field cannot be empty.")
      }
   }
</script>